{
  "manifest_version": 3,
  "name"            : "Styler",
  "version"         : "2.0",
  "description"     : "Inject styles and scripts into pages",

  "background": {
    "service_worker": "background/index.js"
  },

  "icons": {
    "16"  : "images/icon16.png",
    "48"  : "images/icon48.png",
    "128" : "images/icon128.png"
  },

  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
