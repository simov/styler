{
    "manifest_version": 2,
    "name"            : "Styler",
    "version"         : "1.0",
    "description"     : "Whatever",

    "options_page"    : "public/options.html",
    "background" : {
        "scripts": [
            "lib/require.js",
            "lib/emitter.js",
            "lib/background/module/file.js",
            "lib/background/module/client.js",
            "lib/background/module/settings.js",
            "lib/background/index.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "lib/require.js",
                "lib/client/module/inject.js",
                "lib/client/index.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],

    "icons": {
        "16"  : "public/images/icon16.png",
        "48"  : "public/images/icon48.png",
        "128" : "public/images/icon128.png"
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_security_policy": "script-src 'unsafe-eval'; object-src 'self'"
}
