{
  "manifest_version": 3,
  "name"            : "Styler",
  "version"         : "2.0",
  "description"     : "Inject styles and scripts into pages",

  "background": {
    "service_worker": "background/index.js"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "icons": {
    "16"  : "images/icon16.png",
    "48"  : "images/icon48.png",
    "128" : "images/icon128.png"
  },

  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
